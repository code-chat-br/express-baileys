{
    "env": {
        "node": true
    },
    "extends": ["xo", "prettier"],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "off",
        "capitalized-comments": "off",
        "prettier/prettier": ["error", { "endOfLine": "auto" }],
        "one-var": "off",
        "max-params": ["error", 5],
        "arrow-body-style": ["error", "always"],
        "radix": "off",
        "no-unused-expressions": "off",
        "curly": "error",
        "new-cap": "off",
        "no-return-assign": "off",
        "no-await-in-loop": "off",
        "no-return-await": "off"
    },
    "plugins": ["prettier"]
}